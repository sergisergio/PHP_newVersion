{% extends "admin/base.html.twig" %}

{% block title %}
    Dashboard
{% endblock %}

{% block stylesheet %}
{% endblock %}

{% block main %}
    <div class="container">
      {% include 'admin/_partials/nav2.html.twig' %}
      <h2 class="text-center">Gestion des catégories</h2>
      <div class="divide20"></div>
        {{ message.display }}
        <div class="post box">
            <h2>Ajouter une catégorie</h2>
              <div class="form-container">
                <form action="index.php?c=adminDashboard&t=addCategory" method="post" enctype="multipart/form-data">
                  <div>
                    <label for="name">Nom</label><br />
                    <input type="text" id="name" name="name" placeholder="nom" />
                  </div>
                  <div class="divide40"></div>
                  <div>
                    <input class="btn btn-default" type="submit" style="width: 100px;display: block; margin: 0 auto;"/>
                  </div>
                  <!--<div>
                    <input type="hidden" name="token" id="token" value="<?= $csrfAddPostToken; ?>" />
                  </div>-->
                </form>
              </div>
            </div>
      <div class="post box">
        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">Nom</th>
              <th scope="col">Modifier</th>
              <th scope="col">Supprimer</th>
            </tr>
          </thead>
          <tbody>
            {% for category in categories %}
              <tr>
                <th scope="row">{{ category.id }}</th>
                <td>{{ category.name }}</td>
                <td><i class="fa fa-pencil" aria-hidden="true"></i></td>
                <td>
                  <form method="post" action="?c=adminDashboard&t=deleteCategory&id={{ category.id }}" class="delete-form">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Confirmer la suppression ?');"><i class="fa fa-trash-o"></i></button>
                  </form>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
    <div class="divide100"></div>
{% endblock %}

{% block js %}
{% endblock %}
