{% extends "admin/base.html.twig" %}

{% block title %}
    Dashboard
{% endblock %}

{% block stylesheet %}
{% endblock %}

{% block main %}
    <div class="container">
      {% include 'admin/dashboard/_partials/nav2.html.twig' %}
      <h2 class="text-center">Gestion des catégories</h2>
      <div class="divide20"></div>
        {{ message.display }}
        <div class="post box">
          <div class="col-md-6 col-md-offset-3">
            <h2>Ajouter une catégorie</h2>
              <div class="form-container">

                  {% include('admin/dashboard/categories/_form_category_add.html.twig') %}


              </div>
            </div>
          </div>
      <div class="post box">
        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">Nom</th>
              <th scope="col">Modifier</th>
              <th scope="col">Supprimer</th>
            </tr>
          </thead>
          <tbody>
            {% for category in categories %}
              <tr>
                <th scope="row">{{ category.id }}</th>
                <td>{{ category.name }}</td>
                <td>
                  <a href="" data-toggle="modal" data-target="#updateCategory{{ category.id }}" data-id="{{ category.id }}">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                  </a>
                  {% include('admin/dashboard/categories/_modal_category_update.html.twig') %}
                </td>
                <td>
                  {% include('admin/dashboard/categories/_form_category_delete.html.twig') %}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
    <div class="divide100"></div>
{% endblock %}

{% block js %}
{% endblock %}
